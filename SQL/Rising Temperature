# Write your MySQL query statement below
SELECT w1.id
FROM Weather w1
JOIN Weather w2
ON DATEDIFF(w1.recordDate, w2.recordDate) = 1
WHERE w1.temperature > w2.temperature 

#Other Solution
SELECT w2.id
FROM Weather w1
JOIN Weather w2
WHERE w1.temperature < w2.temperature AND w1.recordDate = w2.recordDate - INTERVAL 1 DAY
